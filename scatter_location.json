{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Confidence on the Street, by Location of Incident",
    "subtitle": ["Mean confidence on the streets score, before and after service.", "Points above 45Â° line indicate positive change.", " "],
    "anchor": "start",
    "fontSize": 20,
    "subtitleFontSize": 14
  },
  "config": {
    "background": "white",
    "view": {
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ella-mclintic/ella-mclintic.github.io/refs/heads/main/mean_location.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.LOCATION_GROUP !== 'Residential Institution'"
    }
  ],
  "height": 300,
  "width": 300,
  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "first",
          "type": "quantitative",
          "scale": {
            "domain": [1.3, 1.9]
          },
          "axis": {
            "grid": false
          },
          "title": "Before"
        },
        "y": {
          "field": "last",
          "type": "quantitative",
          "scale": {
            "domain": [1.3, 1.9]
          },
          "axis": {
            "grid": false
          },
          "title": "After"
        },
        "size": {
          "field": "count",
          "type": "quantitative",
          "title": "Prison Rate",
          "scale": {
            "range": [20, 13900]
          },
          "legend": null
        },
        "color": {
          "field": "LOCATION_GROUP",
          "type": "nominal",
          "scale": {
            "domain": [
              "Family/Friend's Home",
              "Perpetrator's Home",
              "Online/Virtual",
              "Educational Institution",
              "Public Space",
              "Survivor's Home",
              "Survivor's Workplace",
              "Unknown"
            ],
            "range": ["#1f77b4", "#aec7e8", "#ff7f0e", "#ffbb78", "#2ca02c", "#98df8a", "#d62728", "#ff9896"]
          },
          "legend": {
            "title": "Location",
            "orient": "right",
            "labelLimit": 200,
            "titleLimit": 80,
            "padding": 30
          }
        },
        "order": {
          "field": "count",
          "type": "quantitative",
          "sort": "descending"
        },
        "tooltip": [
          {
            "field": "LOCATION_GROUP",
            "type": "ordinal",
            "title": "Location"
          },
          {
            "field": "first",
            "type": "quantitative",
            "title": "Before",
            "format": ".2f"
          },
          {
            "field": "last",
            "type": "quantitative",
            "title": "After",
            "format": ".2f"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Count",
            "format": ","
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "x": 1.3,
            "y": 1.3
          },
          {
            "x": 1.9,
            "y": 1.9
          }
        ]
      },
      "mark": {
        "type": "line",
        "strokeDash": [7, 8],
        "color": "lightgrey"
      },
      "encoding": {
        "x": {
          "field": "x",
          "type": "quantitative"
        },
        "y": {
          "field": "y",
          "type": "quantitative"
        }
      }
    }
  ]
}
